{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "sourceMap": true,
      "noEmitOnError": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,  
      "strictPropertyInitialization": false
    }
  }